<% if (success_msg && success_msg.length > 0) { %>
<div
  class="mb-4 rounded-lg bg-green-100 p-4 text-green-800 border border-green-300"
  role="alert"
>
  <%= success_msg %>
</div>
<% } %> <% if (error_msg && error_msg.length > 0) { %>
<div
  class="mb-4 rounded-lg bg-red-100 p-4 text-red-800 border border-red-300"
  role="alert"
>
  <%= error_msg %>
</div>
<% } %>
