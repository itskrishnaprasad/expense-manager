<div class="container mx-auto p-4 md:p-6">
  <h1 class="text-2xl md:text-3xl font-bold mb-6">Manage Categories</h1>

  <div class="bg-white p-6 rounded-lg shadow-md mb-8">
    <h2 class="text-xl font-semibold mb-4">Add New Category</h2>
    <form
      action="/categories"
      method="POST"
      class="grid grid-cols-1 md:grid-cols-3 gap-4 items-end"
    >
      <div>
        <label for="name" class="block text-sm font-medium text-gray-700"
          >Category Name</label
        >
        <input
          type="text"
          name="name"
          id="name"
          required
          class="mt-1 block w-full p-2 border border-gray-300 rounded-md"
          placeholder="e.g., Side Project"
        />
      </div>
      <div>
        <label for="type" class="block text-sm font-medium text-gray-700"
          >Type</label
        >
        <select
          name="type"
          id="type"
          required
          class="mt-1 block w-full p-2 border border-gray-300 rounded-md"
        >
          <option value="expense">Expense</option>
          <option value="income">Income</option>
        </select>
      </div>
      <div class="md:col-start-3">
        <button
          type="submit"
          class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700"
        >
          Create Category
        </button>
      </div>
    </form>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <div>
      <h2 class="text-xl font-semibold mb-4">Income Categories</h2>
      <div class="bg-white p-4 rounded-lg shadow-md">
        <ul class="divide-y divide-gray-200">
          <% incomeCategories.forEach(cat => { %>
          <li class="py-3 flex justify-between items-center">
            <span><%= cat.name %></span>
            <div>
              <% if (cat.isDefault) { %>
              <span
                class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-200 text-gray-700"
                >Default</span
              >
              <% } else { %>
              <form
                action="/categories/delete/<%= cat._id %>"
                method="POST"
                class="inline ml-2"
              >
                <button
                  type="submit"
                  class="text-red-500 hover:text-red-700 text-sm"
                >
                  Delete
                </button>
              </form>
              <% } %>
            </div>
          </li>
          <% }); %>
        </ul>
      </div>
    </div>

    <div>
      <h2 class="text-xl font-semibold mb-4">Expense Categories</h2>
      <div class="bg-white p-4 rounded-lg shadow-md">
        <ul class="divide-y divide-gray-200">
          <% expenseCategories.forEach(cat => { %>
          <li class="py-3 flex justify-between items-center">
            <span><%= cat.name %></span>
            <div>
              <% if (cat.isDefault) { %>
              <span
                class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-200 text-gray-700"
                >Default</span
              >
              <% } else { %>
              <form
                action="/categories/delete/<%= cat._id %>"
                method="POST"
                class="inline ml-2"
              >
                <button
                  type="submit"
                  class="text-red-500 hover:text-red-700 text-sm"
                >
                  Delete
                </button>
              </form>
              <% } %>
            </div>
          </li>
          <% }); %>
        </ul>
      </div>
    </div>
  </div>
</div>
